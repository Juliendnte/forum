<header class="header-global">
    <div class="header-logo">
        <a href="/coder">
            <div class="header-logo-img">
                <img src="/public/images/icon/Logo.png" alt="logo coder">
            </div>
            <div class="header-logo-name">
                <p>CODER</p>
            </div>
        </a>
    </div>
    <div class="header-search-global">
        <form id="search-form" action="/coder/recherche" method="get">
            <div class="group">
                <svg viewBox="0 0 24 24" aria-hidden="true" class="icon">
                    <g>
                        <path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path>
                    </g>
                </svg>
                <input id="search-input" class="input" type="search" name="search" placeholder="Recherche Topics, Publications, Utilisateurs" oninput="handleInput(event)" />
                <div class="suggestions" id="suggestions"></div>
            </div>
        </form>

        <div class="header-btn-add-post">
            <a href="/coder/create/topic">
                <button class="btn">
                    &#10010; Créer
                </button>
            </a>
        </div>
    </div>
    <div class="header-login">
        <% if (!dataUser) { %>
            <a href="/coder/login">
                <button class="login-global" id="show-login">
                    <svg width="100%" height="100%" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M20 21C20 19.6044 20 18.9067 19.8278 18.3389C19.44 17.0605 18.4395 16.06 17.1611 15.6722C16.5933 15.5 15.8956 15.5 14.5 15.5H9.5C8.10444 15.5 7.40665 15.5 6.83886 15.6722C5.56045 16.06 4.56004 17.0605 4.17224 18.3389C4 18.9067 4 19.6044 4 21M16.5 7.5C16.5 9.98528 14.4853 12 12 12C9.51472 12 7.5 9.98528 7.5 7.5C7.5 5.01472 9.51472 3 12 3C14.4853 3 16.5 5.01472 16.5 7.5Z"
                              stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </button>
            </a>
        <% } else { %>
            <a href="/coder/user/<%= typeof Name !== 'undefined' ? Name : dataUser.utilisateur.Name %>">
                <button class="login-global" id="show-login">
                    <img src="<%= PathUserLog %>" alt="User Avatar">
                </button>
            </a>
            <form action="/treatment/disconnect" method="get">
                <button class="log-out-global">
                    <svg width="100%" height="100%" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M16 17L21 12M21 12L16 7M21 12H9M9 3H7.8C6.11984 3 5.27976 3 4.63803 3.32698C4.07354 3.6146 3.6146 4.07354 3.32698 4.63803C3 5.27976 3 6.11984 3 7.8V16.2C3 17.8802 3 18.7202 3.32698 19.362C3.6146 19.9265 4.07354 20.3854 4.63803 20.673C5.27976 21 6.11984 21 7.8 21H9"
                              stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <p>Déconnexion</p>
                </button>
            </form>
        <% } %>
    </div>
</header>