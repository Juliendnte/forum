<section class="popUp-friend-ctn" id="UserFriendPopup">
    <div class="popUp-friend-global">
        <div class="titre-friend-popUp">
            <div class="titre-friend">
                <p>Suivi(e)s</p>
                <button class="btn-friend-popUp" id="btnClosePopUPFriend">
                    <div class="_abm0">
                        <svg aria-label="Fermer" class="x1lliihq x1n2onr6 x5n08af" fill="currentColor" height="18" role="img" viewBox="0 0 24 24" width="18"><title>Fermer</title>
                            <polyline fill="none" points="20.643 3.357 12 12 3.353 20.647" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="3"></polyline>
                            <line fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="3" x1="20.649" x2="3.354" y1="20.649" y2="3.354"></line>
                        </svg>
                    </div>
                </button>
            </div>
        </div>
        <div class="section-UserFriend-ctn">
            <div class="section-UserFriend-input">
                <div class="input-UserFriend">
                    <div class="group UserFriend">
                        <svg viewBox="0 0 24 24" aria-hidden="true" class="icon">
                            <g>
                                <path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z">
                                </path>
                            </g>
                        </svg>
                        <input class="input" type="search" id="searchFriend" placeholder="Recherche"/>
                    </div>
                    <div class="UserFriend-ctn" id="UserFriendList">
                        <% if ( dataUser && (dataUser.utilisateur.Suivie.length > 0 || dataUser.utilisateur.Friends.length > 0)) { %>
                            <% dataUser.utilisateur.Suivie.forEach(Suivie => { %>
                                <div class="UserFriend-div-global UserFriend-item" data-name="<%= Suivie.Name.toLowerCase() %>">
                                    <a href="/coder/user/<%= Suivie.Name %>">
                                        <div class="UserFriend-global">
                                            <div class="UserFriend-img">
                                                <img src="<%= Suivie.Path %>" alt="Photo de <%= Suivie.Name %>">
                                            </div>
                                            <div class="UserFriend-name">
                                                <span><%= Suivie.Name %></span>
                                            </div>
                                        </div>
                                        <div class="UserFriend-btn-friend">
                                            <button>Voir Profil</button>
                                        </div>
                                    </a>
                                </div>
                            <% }); %>
                            <% dataUser.utilisateur.Friends.forEach(friend => { %>
                                <div class="UserFriend-div-global UserFriend-item" data-name="<%= friend.Name.toLowerCase() %>">
                                    <a href="/coder/user/<%= friend.Name %>">
                                        <div class="UserFriend-global">
                                            <div class="UserFriend-img">
                                                <img src="<%= friend.Path %>" alt="Photo de <%= friend.Name %>">
                                            </div>
                                            <div class="UserFriend-name">
                                                <span><%= friend.Name %></span>
                                            </div>
                                        </div>
                                        <div class="UserFriend-btn-friend">
                                            <button>Voir Profil</button>
                                        </div>
                                    </a>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p class="message-friend-not-found">Aucun suivi(e)s trouv√©.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
